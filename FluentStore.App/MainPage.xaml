<UserControl
    x:Class="FluentStore.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FluentStore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    SizeChanged="Page_SizeChanged"
    Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <NavigationView x:Name="MainNav" PaneDisplayMode="Top" Grid.Row="1" IsTitleBarAutoPaddingEnabled="False"
                              SelectionChanged="NavigationView_SelectionChanged" BackRequested="MainNav_BackRequested">

            <NavigationView.PaneFooter>
                <Grid>
                    <Button x:Name="SignInButton" Visibility="Visible" Command="{x:Bind ViewModel.SignInCommand}"
                            Style="{ThemeResource AccentButtonStyle}" CornerRadius="4"
                            ToolTipService.ToolTip="Sign in" AutomationProperties.Name="Sign in"
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                        <StackPanel x:Name="SignInButtonContent" Spacing="8" Orientation="Horizontal">
                            <SymbolIcon x:Name="SignInButtonSymbol" Symbol="AddFriend" />
                            <TextBlock Text="Sign in"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="UserButton" Visibility="Collapsed" Background="Transparent"
                            CornerRadius="4" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left"
                            x:DefaultBindMode="OneWay">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon x:Name="UserButtonSymbol" Symbol="Contact" />
                                <TextBlock x:Name="UserButtonDisplayName" Visibility="Collapsed"
                                           Text="{x:Bind UserService.CurrentProfile.DisplayName}"
                                           Margin="12,0,0,0"/>
                            </StackPanel>
                        </Button.Content>

