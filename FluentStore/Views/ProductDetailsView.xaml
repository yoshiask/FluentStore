                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon Glyph="&#xE1CE;"/>
                    <TextBlock Text="Rate this app"/>
                </StackPanel>
            </Button>
            <ScrollViewer Grid.Row="2">
                <StackPanel Spacing="10">
                    <Grid Background="{ThemeResource SystemChromeLowColor}"
